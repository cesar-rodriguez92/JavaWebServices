package com.crodriguezt.restws;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;


public class UserDAO {

	public List<User> getAllUsers(){
		List<User> userList = null;
		
		try {
			File file =  new File("Usuarios.txt");
			if (!file.exists()) {
				System.out.println("Archivo no existe");
				User user = new User(1,"Mahesh","Teacher");
				User user1 = new User(2,"Cesar","Ing");
				User user2 = new User(3,"Alberto","Sistemas");
				User user3 = new User(4,"Rodriguez","Univ");
				User user4 = new User(5,"Toledo","de Lima");
				userList =  new ArrayList<User>();
				userList.add(user);
				userList.add(user1);
				userList.add(user2);
				userList.add(user3);
				userList.add(user4);
				saveUserList(userList);
			}else{
				System.out.println("Archivo SI existe");
				FileInputStream fiis = new FileInputStream(file);
				ObjectInputStream ois = new ObjectInputStream(fiis);
				userList = (List<User>) ois.readObject();
				ois.close();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
		return userList;
	}
	
	private void saveUserList(List<User> userList){
		try {
			File file =  new File("Usuarios.txt");
			FileOutputStream fos;
			fos = new FileOutputStream(file);
			ObjectOutputStream oos = new ObjectOutputStream(fos);
			oos.writeObject(userList);
			oos.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public List<User> getAllUsersOLD(){
		List<User> userList = null;
		try {
				User user = new User(1,"Mahesh","Teacher");
				User user1 = new User(2,"Luis","Piloto");
				User user2 = new User(3,"Pedro","Abogado");
				User user3 = new User(4,"Alfredo","Doctor");
				userList =  new ArrayList<User>();
				userList.add(user);
				userList.add(user1);
				userList.add(user2);
				userList.add(user3);
		}catch (Exception e) {
			e.printStackTrace();
		}
		return userList;
	}
	
	public User getUser(int id){
		List<User> userList =  getAllUsers();
		
		for (User user : userList) {
			if (user.getId() == id) {
				return user;
			}
		}
		return null;
		
	}
	
	public int addUser(User newUser){
		List<User> userList = getAllUsers();
		boolean userexists = false;
		for (User user: userList) {
			if (user.getId() == newUser.getId()) {
				userexists = true;
				return 1;
			}
			
		}
		return 0;
	}
	
	public int deleteUser(int id){
		List<User> userList = getAllUsers();
		for(User user : userList){
			if(user.getId() == id){
				int index = userList.indexOf(user);
				userList.remove(index);
				saveUserList(userList);
				return 1;
			}
			
		}
		return 0;
	}
	
